<configuration debug="false">
	<property name="logHome" value="${higgs.log}/${higgs.agentIdentifier}" />
	<property name="appName" value="higgs"></property>

	<!--
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
			<pattern>%-32(%d{yyyy-MM-dd HH:mm:ss.SSS} [HIGGS] [%thread]) %5level %logger{40} - %msg%n</pattern>
        </encoder>
	</appender>

	-->

	<appender name="higgsLogAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logHome}/${appName}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logHome}/${appName}-%d{yyyy-MM-dd}.gz</fileNamePattern>
			<maxHistory>31</maxHistory>
		</rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%-32(%d{yyyy-MM-dd HH:mm:ss.SSS} [HIGGS] [%thread]) %5level %logger{40} - %msg%n</pattern>
        </encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="higgsLogAppender" />
	</root>
</configuration>
